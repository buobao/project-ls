<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="@dimen/head_model_height"
    android:background="#F6F6F6"
    android:visibility="visible"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_sortArea_HouseManageActivity"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_sort_btn_bg_house_manage"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/h_manage_more_icon_order"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="15dp"
            android:text="按面积"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_sortTime_HouseManageActivity"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_sort_btn_bg_house_manage"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/h_manage_more_icon_order"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="15dp"
            android:text="挂牌时间"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_priceArea_HouseManageActivity"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_sort_btn_bg_house_manage"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/h_manage_more_icon_order"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="15dp"
            android:text="按价格"
            android:textColor="#000000" />
    </RelativeLayout>

</LinearLayout>
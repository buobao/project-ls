<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingTop="@dimen/scroll_tag_view_bottom_with_head" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gridView_dialogTagSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:choiceMode="multipleChoice"
            android:gravity="center"
            android:numColumns="auto_fit" />

        <Button
            android:id="@+id/btn_submit_dialogTagSelector"
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:layout_below="@id/gridView_dialogTagSelector"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button_red"
            android:text="@string/confirm"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/btn_submit_dialogTagSelector" />
    </RelativeLayout>

    <View
        android:id="@+id/backView_dialogTagSelector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_half" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_marginTop="@dimen/head_model_height"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/llyt_search_dialogSearchHouseManage"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85" >

                <EditText
                    android:id="@+id/et_search_dialogSearchHouseManage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dialog_search_edit_bg_house_manage"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical|left"
                    android:hint="按手机号码搜索"
                    android:paddingLeft="12dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColorHint="#D1D1D1"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bt_import_clear"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/close_search" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_import_search"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="搜索"
                android:gravity="center"
                android:background="@drawable/shape_yuan_jiao"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
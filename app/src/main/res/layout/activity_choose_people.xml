<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_title_model1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_choose_people_search"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_search_edit_bg_house_manage"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/searchg_g"/>

            <TextView
                android:id="@+id/et_choose_people_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/search_choose_hit"
                android:singleLine="true"
                android:textColorHint="#BBBBBB"
                android:textSize="14sp"
                />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_historySearch_dialogSearchHouseManage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/llyt_search_dialogSearchHouseManage"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="12dp"
            android:divider="@null"
            android:scrollbarSize="0dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="22dp"
            android:gravity="left|center_vertical"
            android:text="最近陪看人"
            android:textColor="#414141"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgray"
            />

        <ListView
            android:id="@+id/lv_choose_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:divider="@color/lightgray"
            android:dividerHeight="1px"
            android:scrollbars="none"
            android:listSelector="@color/lightgray"
            >
        </ListView>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_yuekan_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            tools:text="10:10--12:10"
            />

        <LinearLayout
            android:id="@+id/ll_yuekan_kehu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/yuekan_bgcolor"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@null"
                    android:src="@drawable/yuekan_people"
                    />

                <TextView
                    android:id="@+id/tv_yuekan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="王先生"
                    />

                <TextView
                    android:id="@+id/tv_yuekan_custcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="客户编号"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yuekan_fangyuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yuekan_bgcolor"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@null"
                    android:src="@drawable/yuekan_house"
                    />

                <TextView
                    android:id="@+id/tv_yuekan_loupan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="密云路250弄"
                    />

                <TextView
                    android:id="@+id/tv_yuekan_dong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="2栋"
                    />

                <TextView
                    android:id="@+id/tv_yuekan_gaodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_house_list_red_house_manage"
                    tools:text="低层"
                    android:textColor="@color/red"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

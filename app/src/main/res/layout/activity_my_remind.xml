<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_menu_tixing"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/header_title_model1" />
    <com.vocinno.utils.view.refreshablelistview.XListView
        android:id="@+id/lv_remindList_MessageListActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/transparent"
        android:scrollbars="none"
        android:divider="@drawable/bg_custormer_info_list_divider_custormer_manage"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent" >
    </com.vocinno.utils.view.refreshablelistview.XListView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/left_menu_tixing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:clickable="true"
        >
        <include
            layout="@layout/activity_slid_menu"
            />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
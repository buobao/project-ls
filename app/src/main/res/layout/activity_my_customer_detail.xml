<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include
        layout="@layout/header_title_model1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_model_height"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F2F2F2"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="300dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#D1D1D1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:paddingLeft="18dp"
                android:text="@string/basic_info"
                android:textColor="#2E2E2E"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_customercode_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_customername_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#D1D1D1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text="@string/need_info"
                    android:textColor="#2E2E2E"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_add_demand_detail"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="6dp"
                    android:src="@drawable/c_manage_button_add"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_type_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_fangxing_cust"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_quyu_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_acreage_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_price_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:id="@+id/tv_area_custdetail"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:background="#D1D1D1"/>

                <!-- <TextView
                     android:id="@+id/tv_tenancytime_customerDetailActivity"
                     android:layout_width="match_parent"
                     android:layout_height="32dp"
                     android:layout_alignParentBottom="true"
                     android:background="@color/white"
                     android:gravity="center_vertical|left"
                     android:paddingLeft="18dp"
                     android:text=""
                     android:textColor="#9E9E9E"
                     android:textSize="13sp" />-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#D1D1D1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:text="客源跟进"
                    android:textColor="#2E2E2E"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imgView_addTrack_customerDetailActivity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="6dp"
                    android:src="@drawable/c_manage_button_add"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:background="#D1D1D1"/>

            <com.vocinno.centanet.apputils.selfdefineview.ListViewNeedResetHeight
                android:id="@+id/lv_track_customerDetailActivity"
                style="@style/centanet_listview"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#D1D1D1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_other_customerDetailActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:text="@string/other_info"
                    android:textColor="#2E2E2E"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_money_customerDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|left"
                    android:minHeight="50dp"
                    android:paddingLeft="18dp"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D1D1D1"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D1D1D1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:text="带看记录"
                    android:textColor="#2E2E2E"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="6dp"
                    android:src="@drawable/c_manage_button_add"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:background="#D1D1D1"/>

            <com.vocinno.centanet.apputils.selfdefineview.ListViewNeedResetHeight
                android:id="@+id/lv_commpany_watch"
                style="@style/centanet_listview"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/imgView_phone_customerDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red_main_red"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/h_detail_icon_contact"
            android:drawablePadding="5dp"
            android:text="联系客户"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>

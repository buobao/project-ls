<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.vocinno.centanet.apputils.selfdefineview.WheelView
            android:id="@+id/wv_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:itemNumber="5"
            app:lineColor="#F2F2F2"
            app:lineHeight="0dp"
            app:maskHight="28dp"
            app:noEmpty="true"
            app:normalTextColor="#D1D1D1"
            app:normalTextSize="14sp"
            app:selectedTextColor="#D03532"
            app:selectedTextSize="18sp"
            app:unitHight="26dp" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="年"
            android:gravity="center"
            />
        <com.vocinno.centanet.apputils.selfdefineview.WheelView
            android:id="@+id/wv_month"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:itemNumber="5"
            app:lineColor="#F2F2F2"
            app:lineHeight="0dp"
            app:maskHight="28dp"
            app:noEmpty="true"
            app:normalTextColor="#D1D1D1"
            app:normalTextSize="14sp"
            app:selectedTextColor="#D03532"
            app:selectedTextSize="18sp"
            app:unitHight="26dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="月"
            android:gravity="center"
            />
        <com.vocinno.centanet.apputils.selfdefineview.WheelView
            android:id="@+id/wv_day"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:itemNumber="5"
            app:lineColor="#F2F2F2"
            app:lineHeight="0dp"
            app:maskHight="28dp"
            app:noEmpty="true"
            app:normalTextColor="#D1D1D1"
            app:normalTextSize="14sp"
            app:selectedTextColor="#D03532"
            app:selectedTextSize="18sp"
            app:unitHight="26dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="日"
            android:gravity="center"
            />
        <com.vocinno.centanet.apputils.selfdefineview.WheelView
            android:id="@+id/wv_hour"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:itemNumber="5"
            app:lineColor="#F2F2F2"
            app:lineHeight="0dp"
            app:maskHight="28dp"
            app:noEmpty="true"
            app:normalTextColor="#D1D1D1"
            app:normalTextSize="14sp"
            app:selectedTextColor="#D03532"
            app:selectedTextSize="18sp"
            app:unitHight="26dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="时"
            android:gravity="center"
            />
        <com.vocinno.centanet.apputils.selfdefineview.WheelView
            android:id="@+id/wv_min"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:itemNumber="5"
            app:lineColor="#F2F2F2"
            app:lineHeight="0dp"
            app:maskHight="28dp"
            app:noEmpty="true"
            app:normalTextColor="#D1D1D1"
            app:normalTextSize="14sp"
            app:selectedTextColor="#D03532"
            app:selectedTextSize="18sp"
            app:unitHight="26dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="分"
            android:gravity="center"
            />
    </LinearLayout>
  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"
        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:background="@drawable/shape_dialog_bt"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#000000"
                android:textSize="15dp" />
            <Button
                android:id="@+id/bt_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
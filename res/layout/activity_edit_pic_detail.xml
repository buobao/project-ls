<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<include layout="@layout/header_title_model1"/>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp" >

        <RelativeLayout
            android:id="@+id/rlyt_sureChange_EditPicDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/work_icon_delete"
                android:drawablePadding="3dp"
                android:text="删除" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_houseDetail_EditPicDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="200dp" >
            
            <ImageView 
                android:id="@+id/img_houseDetail_EditPicDetailActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout2"
            android:background="#F6F6F6"
            android:orientation="vertical" >
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="文字描述"
                />
                <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2" />
            
            <EditText 
                android:id="@+id/et_changeImage_EditPicDetailActivity"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:text="环境通透 上风上水"
                android:textSize="14sp"
                android:gravity="top|left"
                android:editable="true"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/img_allow_EditPicDetailActivity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                   	android:layout_marginRight="20dp"
                   	android:src="@drawable/work_button_editor"
                    />
                
            </RelativeLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2" />
        </LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>
